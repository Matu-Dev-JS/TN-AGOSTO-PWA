<h1>Cargar producto</h1>

<form method="POST" action="/product/new">
    {{#each this.data.form_state}}
        <div>
            <label for="{{this.name}}">{{this.label}}</label>
            {{#if this.isInput}}
                <input 
                    placeholder="{{this.placeholder}}" 
                    id="{{this.name}}" 
                    name="{{this.name}}"
                    value="{{this.valor}}" 
                    type="{{this.type}}"
                />
            {{/if}}
            {{#if this.isTextarea}}
                <textarea 
                    placeholder="{{this.placeholder}}" 
                    id="{{this.name}}" 
                    name="{{this.name}}"
                    value="{{this.valor}}" 
                >
                    {{this.valor}}
                </textarea>
            {{/if}}
            {{#if this.errors.length}}
                <ul>
                    {{#each this.errors}}
                        <li>
                            {{this.message}}
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        </div>

    {{/each}}
